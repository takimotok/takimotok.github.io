---
import type { NavItem } from '@/types/consts'
import { NAVIGATION, SITE_METADATA } from '@/consts'
import HeaderLink from './HeaderLink.astro'
import Logo from './Logo.astro'

const NavLins: NavItem[] = NAVIGATION.filter((nav) => nav.href !== '/')
---

<header class="flex items-center justify-between py-10">
  <div class="mr-3 w-20 md:w-40">
    <a href="/" aria-label={SITE_METADATA.title}>
      <Logo class="w-10 sm:w-20" />
    </a>
  </div>
  <div class="flex items-center space-x-4 leading-5 sm:space-x-6">
    {
      NavLins.map((link) => (
        <HeaderLink href={link.href} class="hidden font-medium text-gray-900 dark:text-gray-100 sm:block">
          {link.title}
        </HeaderLink>
      ))
    }
  </div>
</header>
