---
import type { NavItem } from '@/types/nav'
import HeaderLink from '../HeaderLink.astro'

interface Props {
  links: NavItem[]
}

const { links } = Astro.props
---

<nav class="hidden sm:block">
  {
    links.map((link) => (
      <HeaderLink href={link.href} class="font-medium text-gray-900 dark:text-gray-100">
        {link.title}
      </HeaderLink>
    ))
  }
</nav>
