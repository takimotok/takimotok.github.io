---
import type { CollectionEntry } from 'astro:content'
import ProfileImage from './ProfileImage.astro'
import ProfileInfo from './ProfileInfo.astro'
import SocialLinks from './SocialLinks.astro'

interface Props {
  author: CollectionEntry<'authors'>['data']
}

const { name, avatar, occupation, company, github, twitter, blog } = Astro.props.author
---

<div class="flex flex-col items-center pt-8 xl:w-1/3">
  {avatar && <ProfileImage src={avatar} alt={`${name}'s avatar`} />}
  <ProfileInfo {name} {occupation} {company} />
  <SocialLinks {github} {twitter} {blog} />
</div>
