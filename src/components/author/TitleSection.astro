---
interface Props {
  title?: string
  name?: string
}

const { title, name } = Astro.props
---

<div class="space-y-2 pb-8 pt-6 md:space-y-5">
  <h1
    class="text-3xl font-extrabold leading-9 tracking-tight text-gray-500 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-6xl md:leading-14"
  >
    {title}
    {name ? `: ${name}` : ``}
  </h1>
</div>
