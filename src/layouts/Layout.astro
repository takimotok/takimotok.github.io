---
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header/index.astro'

type Props = {
  title: string
  description: string
  titleTemplate?: string
  robots?: string
  article?: {
    publishedTime: Date
    modifiedTime?: Date
    authors: string[]
    authorTwitter?: string
    tags: string[]
  }
}
---

<!doctype html>
<html lang="en">
  <Head {...Astro.props} />

  <body>
    <div class="container mx-auto">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
